package com.lgt.kernel.display{	import flash.display.*;	import flash.events.Event;	public class RedrawableSprite extends Sprite	{		private var _fRedraw:Boolean;		protected var _invalidatedProperties:Object;				public function RedrawableSprite()		{				super();			_invalidatedProperties = {};		}				/**		*	Invalidates the component so it can be redrawn in the next frame.		*			*	@param fAlways Force the redraw immediately.		**/		public function redraw(fAlways:Boolean = false):void		{			_invalidatedProperties.forceRedraw = fAlways;						if (fAlways)			{					callRedraw(null);			} else {				if (!_fRedraw)				{						_fRedraw = true;					addEventListener(Event.ENTER_FRAME, callRedraw);				}			}		}				private function callRedraw(e:Event):void		{			_fRedraw = false;			_redraw();			_invalidatedProperties = { };			removeEventListener(Event.ENTER_FRAME, callRedraw);		}				private function _redraw():void		{			dispatchEvent(new Event(Event.CHANGE));		}	}}